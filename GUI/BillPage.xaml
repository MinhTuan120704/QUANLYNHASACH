                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </TextBlock.RenderTransform><Run Text="SĐT:"/></TextBlock>
                <TextBox x:Name="PhoneText" Margin="903,74,128,582" FontSize="28"/>

            </Grid>
        </Border>

    </Grid>
</Page>
